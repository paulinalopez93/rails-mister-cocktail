<div class="single-cocktail-card">
  <p><%= @cocktail.name %></p>

  <h2>The ingredients are:</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> - <%= dose.ingredient.name %></li>

    <% end %>
  </ul>

<%= cl_image_tag @cocktail.photo, width: 400, height: 300, crop: :fill %>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>

</div>

